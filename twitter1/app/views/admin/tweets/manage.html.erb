<strong>User details </strong>

<table class="table">
	<thread>
  <tr>
    <th>Name</th>
    <th>Username</th>
    <th>tweet</th>
  </tr>
</thread>

  <%@tweets.each do |t|%>
<tr>
 <td><%=t.user.name%></td>
 <td><%=t.user.username%></td>
 <td><%=t.user.email%></td>
 <td><%= link_to admin_tweet_path(t), method: :delete, data: { confirm: "Are you sure you want to delete this user?" } do %>
                <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %></td>
<%end%>
</tr>
</table>
